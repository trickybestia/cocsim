    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "compose_base_images",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/compose_base_images/Cargo.toml",
                    "--example",
                    "compose_base_images"
                ]
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "test_images/single_player/goblin_gauntlet"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "showcase",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/showcase/Cargo.toml",
                    "--bin=simple"
                ]
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "TEST_MAPS_PATH": "test_maps"
            },
            "args": []
        }
    ]
}
