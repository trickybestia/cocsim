    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "compose_base_images",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/compose_base_images/Cargo.toml",
                    "--features",
                    "cli"
                ]
            },
            "cwd": "${workspaceFolder}",
            "args": [
                "--images",
                "test_images/single_player/goblin_gauntlet",
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "showcase simple",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/showcase/Cargo.toml",
                    "--bin=simple"
                ]
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "TEST_MAPS_PATH": "test_maps"
            },
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "showcase attack-optimizer",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/showcase/Cargo.toml",
                    "--bin=attack-optimizer"
                ]
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "TEST_MAPS_PATH": "test_maps"
            },
            "args": []
        }
    ]
}
