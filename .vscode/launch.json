    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "showcase",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=backend/showcase/Cargo.toml"
                ]
            },
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "cocsim.tests",
            "type": "debugpy",
            "request": "launch",
            "module": "cocsim.tests",
        },
        {
            "name": "cocsim.compose_base_images",
            "type": "debugpy",
            "request": "launch",
            "module": "cocsim.compose_base_images",
            "args": [
                "single_player/goblin_gauntlet"
            ]
        },
        {
            "name": "cocsim.showcase",
            "type": "debugpy",
            "request": "launch",
            "module": "cocsim.showcase"
        },
        {
            "name": "cocsim.attack_optimizer",
            "type": "debugpy",
            "request": "launch",
            "module": "cocsim.attack_optimizer"
        }
    ]
}
